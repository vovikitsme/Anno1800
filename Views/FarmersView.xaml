<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Anno1800.Views.FarmersView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Farmers">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label FontSize="18" Text="Укажите количество фермеров:" />
            <Entry
                Keyboard="Numeric"
                Placeholder="Например: 100"
                Text="{Binding FarmersCount}" />

            <HorizontalStackLayout>
                <CheckBox IsChecked="{Binding IsPlanksAvailable}" VerticalOptions="Center" />
                <Label Text="Есть доски на острове" VerticalOptions="Center" />
            </HorizontalStackLayout>

            <Label FontSize="18" Text="Выберите доступные ресурсы:" />
            <Picker
                Title="Выберите ресурс"
                ItemsSource="{Binding AvailableResources}"
                SelectedItem="{Binding SelectedResource}" />

            <Button Command="{Binding CalculateCommand}" Text="Рассчитать" />

            <Label
                FontSize="16"
                Text="{Binding CalculationResult}"
                TextColor="Black" />

            <!--  Новый блок: вывод потребностей фермеров  -->
            <Label
                FontAttributes="Bold"
                FontSize="20"
                Text="Потребности фермеров:" />

            <CollectionView ItemsSource="{Binding GroupedFarmerNeeds}">
                <CollectionView.GroupHeaderTemplate>
                    <DataTemplate>
                        <Label
                            Margin="0,10,0,0"
                            FontAttributes="Bold"
                            FontSize="18"
                            Text="{Binding Name}"
                            TextColor="DarkGreen" />
                    </DataTemplate>
                </CollectionView.GroupHeaderTemplate>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame
                            Margin="0,5"
                            Padding="10"
                            BorderColor="LightGray">
                            <Label FontSize="16" Text="{Binding Name}" />
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
